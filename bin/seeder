#!/usr/bin/env php
<?php

require_once __DIR__ . '/../bootstrap.php';

use App\Entity\Book;
use App\Entity\Page;

/* First Book */

$book = new Book();
$book->setName("Anna Karenina");
$book->setCover("https://cdn.britannica.com/s:800x1000/82/175382-050-8B76E4A8/Greta-Garbo-Anna-Karenina-Clarence-Brown.jpg");
$entityManager->persist($book);
echo "Created Book: " . $book->getName() . "\n";

$page1 = new Page();
$page1->setBook($book);
$page1->setContent("This is the first page of {$book->getName()}");
$entityManager->persist($page1);
echo "Created Page 1 \n";

$page2 = new Page();
$page2->setBook($book);
$page2->setContent("This is the second page of {$book->getName()}");
$entityManager->persist($page2);
echo "Created Page 2 \n";

$page3 = new Page();
$page3->setBook($book);
$page3->setContent("This is the third page of {$book->getName()}");
$entityManager->persist($page3);
echo "Created Page 3 \n";

$page4 = new Page();
$page4->setBook($book);
$page4->setContent("This is the fourth page of {$book->getName()}");
$entityManager->persist($page4);
echo "Created Page 4 \n";

$entityManager->flush();

